<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <TextView
        android:id="@+id/fob_adapter_adapter_title_time"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="08:00"
        android:textColor="#9a9a9a"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/fob_adapter_place_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:id="@+id/fob_adapter_place_in_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="室外"
            android:textColor="#9a9a9a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fob_adapter_place_in_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textColor="#208400"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/fob_arrows_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_adapter_place_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center" >

        <TextView
            android:id="@+id/fob_adapter_place_out_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="室内"
            android:textColor="#9a9a9a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fob_adapter_place_out_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textColor="#208400"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/fob_arrows_gray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_adapter_place_vip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center" >

        <TextView
            android:id="@+id/fob_adapter_place_vip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP"
            android:textColor="#9a9a9a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/fob_adapter_place_vip_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="5"
            android:textColor="#208400"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@drawable/fob_arrows_gray" />
    </LinearLayout>

</LinearLayout>