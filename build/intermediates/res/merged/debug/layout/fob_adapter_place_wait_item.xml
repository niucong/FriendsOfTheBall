<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fob_default_gap"
    android:paddingLeft="@dimen/fob_default_gapx2"
    android:paddingRight="@dimen/fob_default_gapx2"
    android:paddingTop="@dimen/fob_default_gap" >

    <RelativeLayout
        android:id="@+id/fob_adapter_place_confrim_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fob_adapter_place_wait_operate_switch" >

        <TextView
            android:id="@+id/fob_adapter_place_confrim_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/fob_default_gap"
            android:singleLine="true"
            android:text="海淀网球馆"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_middle" />

        <TextView
            android:id="@+id/fob_adapter_place_confrim_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:padding="@dimen/fob_default_gap"
            android:singleLine="true"
            android:text="海淀第一大球场5好场"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_middle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fob_adapter_place_confrim_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fob_adapter_place_wait_operate_switch"
        android:layout_below="@+id/fob_adapter_place_confrim_name" >

        <TextView
            android:id="@+id/fob_adapter_place_confrim_content_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/fob_default_gap"
            android:text="13年11月29日 18:30-19:30 | 初 | 凑伙 | 11月27日截止"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_small" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/fob_adapter_place_wait_operate_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/fob_friend_operate_switch" />

</RelativeLayout>