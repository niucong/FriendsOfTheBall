<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/fob_default_gap"
    android:paddingLeft="@dimen/fob_default_gapx2"
    android:paddingRight="@dimen/fob_default_gapx2"
    android:paddingTop="@dimen/fob_default_gap" >

    <RelativeLayout
        android:id="@+id/fob_adapter_message_leave_header_ll"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="3dp" >

        <ImageView
            android:id="@+id/fob_adapter_message_leave_header_view"
            android:layout_width="@dimen/fob_header_view_normal"
            android:layout_height="@dimen/fob_header_view_normal"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_adapter_friends_header_default_lady" />

        <ImageView
            android:id="@+id/fob_adapter_message_leave_header_new"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/fob_new"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fob_adapter_message_leave_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/fob_adapter_message_leave_header_ll" >

        <TextView
            android:id="@+id/fob_adapter_message_leave_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fob_default_gap"
            android:singleLine="true"
            android:text="海老王"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fob_adapter_message_leave_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fob_adapter_message_leave_name"
            android:gravity="center_vertical|right"
            android:paddingRight="6dp"
            android:singleLine="true"
            android:text="19:30"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_middle" />

        <TextView
            android:id="@+id/fob_adapter_message_leave_content_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fob_adapter_message_leave_name"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/fob_default_gap"
            android:paddingRight="@dimen/fob_default_gap"
            android:text="电子猫 | 我昨天来过了，怎么没看见你"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_middle" />
    </RelativeLayout>

</RelativeLayout>