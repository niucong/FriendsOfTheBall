<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".WelcomePageActivity" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingLeft="10dp" >

        <ImageView
            android:id="@+id/fob_page_leave_header_image"
            android:layout_width="@dimen/fob_leave_header"
            android:layout_height="@dimen/fob_leave_header"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@drawable/pic" />

        <LinearLayout
            android:id="@+id/fob_page_leave_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/fob_page_leave_header_image"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/fob_page_leave_user_nickname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fob_default_gapx4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称："
                    android:textColor="#a3a3a3"
                    android:textSize="@dimen/fob_text_size_middle" />

                <TextView
                    android:id="@+id/fob_page_leave_user_nickname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="网球王子"
                    android:textColor="#545454"
                    android:textSize="@dimen/fob_text_size_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fob_page_leave_user_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fob_default_gapx2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fob_default_gapx4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textColor="#a3a3a3"
                    android:textSize="@dimen/fob_text_size_middle" />

                <TextView
                    android:id="@+id/fob_page_leave_user_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="王网王"
                    android:textColor="#545454"
                    android:textSize="@dimen/fob_text_size_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fob_page_leave_user_sex"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fob_default_gapx2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fob_default_gapx4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别："
                    android:textColor="#a3a3a3"
                    android:textSize="@dimen/fob_text_size_middle" />

                <TextView
                    android:id="@+id/fob_page_leave_user_sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textColor="#545454"
                    android:textSize="@dimen/fob_text_size_middle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fob_page_leave_user_level"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fob_default_gapx2"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/fob_default_gapx4" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="球技水平："
                    android:textColor="#a3a3a3"
                    android:textSize="@dimen/fob_text_size_middle" />

                <TextView
                    android:id="@+id/fob_page_leave_user_level_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高级"
                    android:textColor="#545454"
                    android:textSize="@dimen/fob_text_size_middle" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e7e7e7" />

    <RelativeLayout
        android:id="@+id/fob_page_leave_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fob_default_gapx2"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fob_default_gap"
        android:paddingLeft="@dimen/fob_default_gapx4"
        android:paddingRight="@dimen/fob_default_gapx4"
        android:paddingTop="@dimen/fob_default_gap" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="留言"
            android:textColor="#a3a3a3"
            android:textSize="@dimen/fob_text_size_big" />

        <TextView
            android:id="@+id/fob_page_leave_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2013年11月25日08:00"
            android:textColor="#9c9a9b"
            android:textSize="@dimen/fob_text_size_big" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fob_page_leave_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fob_page_leave_time"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/fob_default_gap"
        android:paddingLeft="@dimen/fob_default_gapx4"
        android:paddingRight="@dimen/fob_default_gapx4"
        android:paddingTop="@dimen/fob_default_gap" >

        <TextView
            android:id="@+id/fob_page_leave_content_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="我很希望加入你的球友群，希望能同意，谢谢！"
            android:textColor="#545454"
            android:textSize="@dimen/fob_text_size_middle" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="40dp"
        android:background="#e7e7e7" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fob_page_leave_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/tab_shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fob_page_leave_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#208400"
            android:gravity="center"
            android:padding="5dp"
            android:text="接受申请"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_big" />

        <TextView
            android:id="@+id/fob_page_leave_refuse"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="拒绝申请"
            android:textColor="#208400"
            android:textSize="@dimen/fob_text_size_big" />
    </LinearLayout>

</LinearLayout>