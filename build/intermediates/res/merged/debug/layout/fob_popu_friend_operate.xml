<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fob_page_friend_operate"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fob_bg_operate"
    android:gravity="center|bottom"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_chat"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_chat" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="聊  天"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_invite"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_invite" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="邀  请"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_add" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="加为好友"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_edit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_edit" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="编  辑"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_details"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_edit" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="详 情"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_delete" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="删  除"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fob_page_friend_operate_remark"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="@dimen/fob_operate_ion"
            android:layout_height="@dimen/fob_operate_ion"
            android:background="#00000000"
            android:contentDescription="@null"
            android:src="@drawable/fob_ion_friend_operate_edit" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="备 注"
            android:textColor="#ffffff"
            android:textSize="@dimen/fob_text_size_small" />
    </LinearLayout>

</LinearLayout>