<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@+id/fob_adapter_event_new_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/fob_adapter_event_new_header_view"
            android:layout_width="@dimen/fob_header_view_normal"
            android:layout_height="@dimen/fob_header_view_normal"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_adapter_friends_header_default_lady" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fob_adapter_event_new_inof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fob_adapter_event_operate_switch"
        android:layout_toRightOf="@+id/fob_adapter_event_new_header"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:id="@+id/fob_adapter_event_new_inof_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fob_default_gap"
            android:gravity="center_vertical"
            android:text="插入信息重要行"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <TextView
            android:id="@+id/fob_adapter_event_new_inof_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fob_adapter_event_new_inof_title"
            android:layout_marginLeft="@dimen/fob_default_gap"
            android:gravity="center_vertical"
            android:text="插入信息重要行"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_middle" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/fob_adapter_event_operate_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/fob_friend_operate_switch"
        android:visibility="gone" />

</RelativeLayout>