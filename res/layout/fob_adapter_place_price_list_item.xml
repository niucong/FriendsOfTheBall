<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fob_default_gap"
    android:paddingTop="@dimen/fob_default_gap" >

    <TextView
        android:id="@+id/fob_adapter_place_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="球馆设施a"
        android:textColor="#545454"
        android:textSize="@dimen/fob_text_size_big" />

    <TextView
        android:id="@+id/fob_adapter_place_price_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="价格"
        android:textColor="#545454"
        android:textSize="@dimen/fob_text_size_big" />

</LinearLayout>