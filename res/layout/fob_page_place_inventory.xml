<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/fob_page_place_time"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#208400"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fob_page_place_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_page_place_time_left" />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fob_page_place_time_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2013年"
                android:textColor="#ffffff"
                android:textSize="@dimen/fob_text_size_big" />

            <TextView
                android:id="@+id/fob_page_place_time_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fob_default_gapx2"
                android:layout_marginRight="@dimen/fob_default_gapx2"
                android:text="11月25日"
                android:textColor="#ffffff"
                android:textSize="@dimen/fob_text_size_big" />

            <TextView
                android:id="@+id/fob_page_place_time_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期日"
                android:textColor="#ffffff"
                android:textSize="@dimen/fob_text_size_big" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="#ffffff" />

        <ImageView
            android:id="@+id/fob_page_place_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_page_place_time_right" />
    </LinearLayout>

    <ListView
        android:id="@+id/fob_page_place_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/fob_page_place_time" >
    </ListView>

</RelativeLayout>