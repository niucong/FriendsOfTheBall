<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/fob_page_create_event_name"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:background="@drawable/fob_bg_edit_white"
            android:gravity="center_vertical"
            android:hint="活动名称"
            android:padding="@dimen/fob_default_gapx2"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <EditText
            android:id="@+id/fob_page_create_event_captain"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:gravity="center_vertical"
            android:hint="队长"
            android:padding="@dimen/fob_default_gapx2"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <EditText
            android:id="@+id/fob_page_create_event_time"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:gravity="center_vertical"
            android:hint="活动时间"
            android:padding="@dimen/fob_default_gapx2"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <EditText
            android:id="@+id/fob_page_create_event_address"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:gravity="center_vertical"
            android:hint="活动地点"
            android:padding="@dimen/fob_default_gapx2"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <LinearLayout
            android:id="@+id/fob_page_create_event_city"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fob_page_create_event_city_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/fob_default_gapx2"
                android:text="所在城市"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/fob_text_size_big" />

            <ImageView
                android:layout_width="@dimen/fob_pull_down"
                android:layout_height="@dimen/fob_pull_down"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/fob_default_gapx3"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/fob_button_pull_down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fob_page_create_event_type"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fob_page_create_event_type_text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/fob_default_gapx2"
                android:text="选择运动板块"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/fob_text_size_big" />

            <ImageView
                android:layout_width="@dimen/fob_pull_down"
                android:layout_height="@dimen/fob_pull_down"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/fob_default_gapx3"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/fob_button_pull_down" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fob_page_create_event_send_news"
            android:layout_width="@dimen/fob_login_w"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fob_default_gap"
            android:background="@drawable/fob_bg_edit_white"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/fob_default_gapx2"
                android:text="发布凑伙公告"
                android:textColor="#9e9e9e"
                android:textSize="@dimen/fob_text_size_big" />

            <ImageView
                android:id="@+id/fob_page_create_event_send_news_flag"
                android:layout_width="@dimen/fob_get_w"
                android:layout_height="@dimen/fob_get_h"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/fob_default_gap"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/fob_get" />
        </LinearLayout>
        <TextView
                android:id="@+id/fob_page_create_event_finish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fob_default_gap"
                android:gravity="center_horizontal"
                android:text="创建并预订场地"
                android:padding="@dimen/fob_default_gapx2"
                android:background="@drawable/fob_bg_button_red"
                android:textColor="#ffffff"
                android:textSize="@dimen/fob_text_size_big" />
    </LinearLayout>

</RelativeLayout>