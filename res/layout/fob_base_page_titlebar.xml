<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fob_base_page_titlebar_h" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/fob_base_page_titlebar_line"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/fob_base_page_titlebar_left"
                android:layout_width="@dimen/fob_header_view_normal"
                android:layout_height="@dimen/fob_header_view_normal"
                android:padding="10dp"
                android:src="@drawable/fob_back" />

            <TextView
                android:id="@+id/fob_base_page_titlebar_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/fob_text_size_large"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/fob_base_page_titlebar_right"
                android:layout_width="@dimen/fob_header_view_normal"
                android:layout_height="@dimen/fob_header_view_normal"
                android:background="@null"
                android:padding="10dp"
                android:src="@drawable/fob_back" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fob_base_page_titlebar_line"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:contentDescription="@null"
            android:src="@drawable/fob_title_line" />
    </RelativeLayout>

</RelativeLayout>