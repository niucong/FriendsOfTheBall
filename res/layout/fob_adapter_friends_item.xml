<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <RelativeLayout
        android:id="@+id/fob_adapter_friends_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/fob_adapter_friends_header_view"
            android:layout_width="@dimen/fob_header_view_normal"
            android:layout_height="@dimen/fob_header_view_normal"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_adapter_friends_header_default_lady" />

        <ImageView
            android:id="@+id/fob_adapter_friends_header_view_flag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/fob_adapter_friends_header_view"
            android:layout_alignRight="@+id/fob_adapter_friends_header_view"
            android:layout_margin="0.5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_adapter_friends_header_flag_true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fob_adapter_friends_inof"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/fob_adapter_friends_operate_switch"
        android:layout_toRightOf="@+id/fob_adapter_friends_header"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:id="@+id/fob_adapter_friends_inof_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/fob_adapter_friends_inof_name_textview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="1"
                android:singleLine="true"
                android:text="loding"
                android:textColor="#000000"
                android:textSize="@dimen/fob_text_size_middle"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fob_adapter_friends_inof_other"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/fob_adapter_friends_inof_name"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/fob_adapter_friends_inof_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fob_adapter_friends_inof_other_grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="1"
                    android:singleLine="true"
                    android:text="球技水平:"
                    android:textColor="#b2b2b2"
                    android:textSize="@dimen/fob_text_size_big" />

                <TextView
                    android:id="@+id/fob_adapter_friends_inof_other_grade_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:marqueeRepeatLimit="1"
                    android:singleLine="true"
                    android:text="中"
                    android:textColor="#295aca"
                    android:textSize="@dimen/fob_text_size_big" />
            </LinearLayout>

            <TextView
                android:id="@+id/fob_adapter_friends_inof_other_addre"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="1"
                android:singleLine="true"
                android:text="loding"
                android:textColor="#b2b2b2"
                android:textSize="@dimen/fob_text_size_big" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/fob_adapter_friends_operate_switch"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/fob_friend_operate_switch" />

</RelativeLayout>