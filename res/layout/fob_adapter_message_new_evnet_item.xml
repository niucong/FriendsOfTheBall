<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ebebeb"
    tools:context=".WelcomePageActivity" >

    <RelativeLayout
        android:id="@+id/fob_adapter_message_new_event_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/fob_adapter_message_new_event_header_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/fob_adapter_friends_header_default_lady" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fob_adapter_message_new_event_inof"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/fob_adapter_message_new_event_agree"
        android:layout_toRightOf="@+id/fob_adapter_message_new_event_header"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fob_adapter_message_new_event_inof_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fob_default_gap"
            android:gravity="center_vertical"
            android:padding="@dimen/fob_default_gapx2"
            android:text="插入信息重要行"
            android:textColor="#000000"
            android:textSize="@dimen/fob_text_size_big" />

        <TextView
            android:id="@+id/fob_adapter_message_new_event_inof_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fob_adapter_message_new_event_inof_title"
            android:layout_marginLeft="@dimen/fob_default_gap"
            android:gravity="center_vertical"
            android:padding="@dimen/fob_default_gapx2"
            android:text="插入信息重要行"
            android:textColor="#9e9e9e"
            android:textSize="@dimen/fob_text_size_middle" />
    </RelativeLayout>

    <TextView
        android:id="@+id/fob_adapter_message_new_event_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="接受"
        android:textColor="#00b4ff"
        android:textSize="20dp" />

</RelativeLayout>